<launch>
    <arg name="robot_type" default="$(env ROBOT_TYPE)" doc="Robot type: [alpha]"/>

    <param name="legged_robot_description" command="$(find xacro)/xacro $(find legged_hil_mirle_description)/urdf/robot.xacro
       robot_type:=$(arg robot_type)
    "/>

    <node name="generate_urdf" pkg="legged_hil_interface" type="generate_urdf.sh" output="screen"
          args="$(find legged_hil_mirle_description)/urdf/robot.xacro $(arg robot_type)"/>

    <rosparam file="$(find legged_hil_gazebo)/config/$(arg robot_type)/default.yaml" command="load"/>
    <rosparam file="$(find legged_hil_gazebo)/config/$(arg robot_type)/legged_hil.yaml" command="load"/>
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find legged_hil_gazebo)/worlds/empty_world.world"/>
    </include>

    <!-- push robot_description to factory and spawn robot in gazebo -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" clear_params="true"
        args="-z 1.0 -param legged_robot_description -urdf -model $(arg robot_type)
                -J LF_HAA 0.5    -J RF_HAA -0.5   -J LH_HAA -0.5   -J RH_HAA 0.5 
                -J LF_HFE 1.0    -J RF_HFE 1.0    -J LH_HFE 1.0    -J RH_HFE 1.0 
                -J LF_KFE -2.689 -J RF_KFE -2.689 -J LH_KFE -2.689 -J RH_KFE -2.689" output="screen"/>
            

</launch>
